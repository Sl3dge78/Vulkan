{
    "version": "2.0.0",
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
    },
    "tasks": [
        {
            "label": "Build All",
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "Build Game",
                "Build Renderer",
                "Build Win32"
            ]
        },
        {
            "label": "Build Game",
            "command": "build_game.bat",
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "Build Renderer",
            "command": "build_renderer.bat",
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "Build Win32",
            "command": "build_win32.bat",
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "Perform tests",
            "problemMatcher": [
                "$msCompile"
            ],
            "command": "run_tests.bat",
        }
    ]
}